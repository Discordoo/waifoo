{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2016",
    "lib": [
      "es2020", 
      "dom" 
    ],
    "removeComments": false,
    "alwaysStrict": true,
    "pretty": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "types"
  ]
}