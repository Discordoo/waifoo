{
  "private": true,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^8.6.0",
    "lerna": "^4.0.0",
    "tsup": "^5.11.10",
    "turbo": "^1.0.24"
  },
  "scripts": {
    "setup": "lerna bootstrap",
    "preinstall": "npx only-allow npm",
    "build": "npm run setup && turbo run build",
    "test": "turbo run test",
    "dev": "turbo run dev",
    "lint": "eslint packages/**/*.ts",
    "lint:fix": "npm run lint -- --fix"
  },
  "turbo": {
    "baseBranch": "origin/develop",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist"
        ]
      },
      "test": {},
      "dev": {
        "cache": false
      }
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
